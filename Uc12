// Employee Payroll Class with Extended Fields
class EmployeePayroll {
    constructor(id, name, salary, gender, startDate) {
        this.id = id;
        this.name = name;
        this.salary = salary;
        this.gender = gender;
        this.startDate = new Date(startDate); // Convert to Date object
    }

    // Method to display Employee Details
    getDetails = () => {
        return `ID: ${this.id}, Name: ${this.name}, Salary: $${this.salary}, Gender: ${this.gender}, Start Date: ${this.startDate.toDateString()}`;
    };
}

// Creating Employee Payroll Objects
const emp1 = new EmployeePayroll(101, "John Doe", 50000, "Male", "2023-03-01");
const emp2 = new EmployeePayroll(102, "Jane Smith", 60000, "Female", "2022-07-15");
const emp3 = new EmployeePayroll(103, "Mike Johnson", 55000, "Male", "2021-11-10");

// Storing Employees in an Array
const employeeList = [emp1, emp2, emp3];

// Displaying Employee Payroll Data
console.log("Extended Employee Payroll Data:");
employeeList.forEach(emp => console.log(emp.getDetails()));
